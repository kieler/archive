<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.kiml.layoutInfo">
      <semanticOption
            class="de.cau.cs.kieler.kaom.Entity"
            config="de.cau.cs.kieler.kaom.custom.TypeLayoutConfig">
      </semanticOption>
      <option
            class="de.cau.cs.kieler.kaom.Relation"
            option="de.cau.cs.kieler.hypernode"
            value="true">
      </option>
      <option
            class="de.cau.cs.kieler.kaom.Entity"
            option="de.cau.cs.kieler.direction"
            value="RIGHT">
      </option>
      <option
            class="de.cau.cs.kieler.kaom.Entity"
            option="de.cau.cs.kieler.nodeLabelPlacement"
            value="OUTSIDE, V_BOTTOM, H_CENTER">
      </option>
      <semanticOption
            class="de.cau.cs.kieler.kaom.Linkable"
            config="de.cau.cs.kieler.kaom.custom.AnnotationsLayoutConfig">
      </semanticOption>
      <semanticOption
            class="de.cau.cs.kieler.kaom.Link"
            config="de.cau.cs.kieler.kaom.custom.AnnotationsLayoutConfig">
      </semanticOption>
   </extension>
   
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="de.cau.cs.kieler.kaom.wizards.new.category"
            name="KIELER Actor-Oriented Modeling (KAOM)">
      </category>
   </extension>
   
   <extension
         point="org.eclipse.ui.importWizards">
      <category
            id="de.cau.cs.kieler.kaom.wizards.import.category"
            name="KIELER Actor-Oriented Modeling (KAOM)">
      </category>
   </extension>

</plugin>
